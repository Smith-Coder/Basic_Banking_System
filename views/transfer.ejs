        <select id="select" class="form-select" multiple aria-label="multiple select example" name="receipent">
                <%for(i=0;i<=datas.length-1;i++){%>
                <option value="<%=datas[i].Account_Number%>">Account_Number : <%=datas[i].Account_Number%> ||   Name : <%=datas[i].Name%></option>
                <%}%>
        </select>
        <br>
        <label for="amount"><h3>Enter amount:</h3></label>
        <input type="text" name="amount" id="amount">
        <br>
        <h3>Your Balance : <%=balance%></h3>
        <br>
